@model Video

<div class="container py-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="row g-0">
            <!-- Thumbnail -->
            <div class="col-md-5">
                <img src="@Model.ThumbnailUrl" class="img-fluid rounded-start w-100 h-100 object-fit-cover" alt="@Model.Title" />
            </div>

            <!-- Details -->
            <div class="col-md-7">
                <div class="card-body p-4">
                    <h3 class="card-title fw-bold mb-3">@Model.Title</h3>

                    <p class="text-muted small mb-2">
                        Added on: @Model.DateAdded.ToString("MMMM dd, yyyy")
                    </p>

                    <p class="card-text fs-6 mb-4" style="white-space: pre-wrap;">
                        @Model.Description
                    </p>

                    @if (Model.Tags != null && Model.Tags.Any())
                    {
                        <div class="mb-4">
                            <h6 class="fw-semibold mb-2">Tags:</h6>
                            <div class="d-flex flex-wrap gap-2">
                                @foreach (var tag in Model.Tags)
                                {
                                    <span class="badge bg-secondary">@tag</span>
                                }
                            </div>
                        </div>
                    }

                    <div class="d-flex flex-wrap gap-3 mt-3">
                        <a href="@Model.VideoUrl" target="_blank" class="btn btn-success">
                            <i class="bi bi-play-circle"></i> Watch Video
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>